<?xml version="1.0" encoding="utf-8"?>
   <extension
     type="module"
     version="3.0"
     method="upgrade"
     client="administrator">
       <name>Latest Extensions (Extensões instaladas recentemente)</name>
       <creationDate>May 2022</creationDate>
       <author>Tim Plummer / Rafael Berlanda</author>
       <authorEmail>example@packtpub.com / rafaelberlanda@gmail.com</authorEmail>
       <authorUrl>http://packtpub.com</authorUrl>
       <copyright>Copyright (C) 2022 Packt Publishing. All rights reserved.</copyright>
       <license>GNU GPL</license>
       <version>1.0.0</version>
     <description>Mostra as extensões instaladas recentemente. Módulo proveniente do livro "Learning Joomla 3 Extensions Development", da Packt Publishing.</description>
     <files>
       <filename module="mod_latestextensions">mod_latestextensions.php</filename>
       <filename>helper.php</filename>
       <folder>tmpl</folder>
     </files>
     <languages>
       <language tag="pt-BR">language/pt-BR/pt-BR.mod_latestextensions.ini</language>
       <language tag="en-GB">language/en-GB/en-GB.mod_latestextensions.ini</language>
     </languages>
     <help url="HELP_EXTENSIONS_MODULE_LATESTEXTENSIONS_URL"/>
     <config>
       <fields name="params">
         <fieldset name="basic">
           <field name="contador" type="text" default="5" label="MOD_LATESTEXTENSIONS_FIELD_COUNT_LABEL" description="MOD_LATESTEXTENSIONS_FIELD_COUNT_DESC" />
         </fieldset>
         <fieldset name="advanced">
           <field
              name="layout"
              type="modulelayout"
              label="JFIELD_ALT_LAYOUT_LABEL"
              description="JFIELD_ALT_MODULE_LAYOUT_DESC"
            />
           <field
             name="moduleclass_sfx"
             type="text"
             label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
             description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
            />
         </fieldset>
      </fields>
   </config>
</extension>